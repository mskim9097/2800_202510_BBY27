<div class="bg-white shadow-md rounded-lg overflow-hidden flex flex-col max-w-sm w-full">
  
    
    <img src="<%= quest.image %>" alt="<%= quest.title %>" class="w-full h-[100px]  object-cover" />
  
    
    <div class="p-4 flex flex-col gap-2">
      <h2 class="text-md font-bold text-gray-800 mb-1"><%= quest.title %></h2>
  
      <p class="text-sm text-gray-700">📍 <%= quest.location %></p>
      <p class="text-sm text-gray-700">🎯 <%= quest.mission %></p>
      <p class="text-sm text-gray-700">🦋 <%= quest.target %></p>
      <p class="text-sm text-gray-700">⏰ <%= quest.time %></p>
      <p class="text-sm text-gray-700">⚠️ <%= quest.difficulty %></p>
  
      <a href="/quests/<%= quest.id %>" class="mt-3 text-center bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded">
        Start Quest
      </a>
    </div>
  </div>
  