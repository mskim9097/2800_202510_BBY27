<div class="bg-white rounded-lg shadow flex w-full max-w-[280px] min-w-[230px]">
  <img src="<%= quest.image || '/images/plant4.jpg' %>" alt="<%= quest.questTitle %>" class="w-24 object-cover rounded-l-lg" />

  <div class="flex flex-col gap-1 ps-2 pt-2 w-full">
    <h2 class="text-xs font-semibold text-gray-800 mb-1">
      <%= quest.questTitle %>
    </h2>
    <p class="text-[11px] text-gray-600">📍 <%= quest.questLocation || 'Location not specified' %>
    </p>
    <p class="text-[11px] text-gray-700">🎯 <%= quest.questMission %>
    </p>
    <% if (!isResearcher) { const difficulty = quest.difficulty?.toLowerCase() || 'medium'; %>
      <div class="text-gray-500 text-xs flex items-center gap-1">
        <% if (difficulty === 'easy') { %>
          <span>🟢</span>
          <% } else if (difficulty === 'medium') { %>
            <span>🟡</span>
            <% } else if (difficulty === 'hard') { %>
              <span>🔴</span>
              <% } %>
                <span>
                  <%= quest.difficulty || 'Medium' %>
                </span>
      </div>
      <% } %>

        <a href="/quests/<%= quest._id %>"
          class="mt-2 text-center text-xs bg-green-600 hover:bg-green-700 text-white py-1 px-2 rounded self-start">
          Details
        </a>
  </div>
</div>