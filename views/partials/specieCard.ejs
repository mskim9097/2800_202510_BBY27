<div class="flex flex-col items-center gap-4">
    <% speciesList.forEach(sp => { %>
        <a href="/species/<%= sp.id %>" 
           class="species-card block w-full max-w-[500px]" 
           data-type="<%= sp.speciesType ? sp.speciesType.toLowerCase() : 'unknown' %>" 
           data-name="<%= sp.speciesName %>">

            <div class="flex flex-col gap-2 bg-white border border-gray-200 rounded-xl shadow-md w-full p-4">

                <!-- Image -->
                <div class="w-full h-48">
                    <% if (sp.speciesImage) { %>
                        <img src="<%= sp.speciesImage %>" 
                             alt="Image of <%= sp.speciesName %>" 
                             class="w-full h-full object-cover rounded-lg" />
                    <% } else { %>
                        <div class="w-full h-full bg-gray-100 flex items-center justify-center rounded-lg text-xl text-gray-500">
                            ğŸ–¼ï¸ No image
                        </div>
                    <% } %>
                </div>

                <!-- Name -->
                <h3 class="mt-4 text-lg font-semibold text-gray-800">ğŸ§¬ <%= sp.speciesName || "Unnamed Species" %></h3>

                <!-- Scientific Name -->
                <p class="text-sm text-gray-600 mt-1"><strong>ğŸ”¬ Scientific Name:</strong>
                    <em><%= sp.speciesScientificName || "N/A" %></em>
                </p>

                <!-- Habitat -->
                <p class="text-sm text-gray-600 mt-1"><strong>ğŸŒ Habitat:</strong> <%= sp.speciesHabitat || "Unknown" %></p>

                <!-- Type -->
                <p class="text-sm text-gray-600 mt-1"><strong>ğŸ·ï¸ Type:</strong> <%= sp.speciesType || "Unknown" %></p>

                <!-- Description -->
                <p class="text-sm text-gray-600 mt-1 line-clamp-2"><strong>ğŸ“– Description:</strong> <%= sp.speciesInfo || "No description provided." %></p>

            </div>
        </a>
    <% }); %>
</div>
