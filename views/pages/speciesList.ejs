<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Camera icon -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        #content {
            -ms-overflow-style: none;
            scrollbar-width: none;
            overflow-y: scroll;
        }

        #content::-webkit-scrollbar {
            display: none;
        }

        .line-clamp-2 {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            text-overflow: ellipsis;
        }
    </style>

    </style>
</head>

<body class="h-screen overflow-hidden">
    <div style="background-color:rgb(242, 242, 242)"
        class="flex flex-col p-4 justify-between h-full rounded-lg shadow-sm gap-4">
        <%- include("../partials/header") %>

            <div id="content" class="flex flex-col gap-5 items-center overflow-y-scroll">
                <div class="flex justify-between w-full px-4 items-center">
                    <% if (userType==="researcher" ) { %>
                        <h1 class="text-center p-2 rounded-xl text-2xl" style="background-color: rgb(92, 203, 92,50%);">üå±
                            Biodiversity
                            Species</h1>
                        <div class="flex justify-end">
                            <div class="relative group">
                                <div
                                    class="absolute bottom-full bg-black text-white text-xs rounded px-2 py-1 group-hover:opacity-100 mb-2 right-0 opacity-0">
                                    Add Species
                                </div>
                                <a href="/species/addSpecies" class="p-2 rounded-full cursor-pointer block"
                                    style="background-color: rgb(92, 203, 92, 80%);">
                                    <img src="/images/add.svg" class="h-8 w-8" alt="Add Quest">
                                </a>
                            </div>
                        </div>
                        <% } %>
                </div>
                <% if (userType==="explorer" ) { %>
                    <h1 class="text-center p-2 rounded-xl"
                        style="background-color: rgb(92, 203, 92,50%);">üå±
                        Biodiversity
                        Species</h1>
                    <% } %>
                <div
                    class="flex  max-w-xl bg-white border border-gray-300 rounded-full shadow-sm px-4 py-2 items-center gap-2">
                    <span class="text-gray-500 text-lg">üîç</span>
                    <input id="searchInput" type="text" placeholder="Search species..."
                        class="flex-grow focus:outline-none text-sm text-gray-800 placeholder-gray-400 bg-transparent">
                    <button id="filterToggle" class="text-gray-500 hover:text-gray-700 text-lg" title="Filter">
                        üß™
                    </button>
                </div>

                <!--filter dropdown -->
                <%-include("../partials/dropdownFilter")%>

                    <div id="speciesContainer" class="flex flex-col">
                        <%- include("../partials/specieCard")%>
                    </div>
                    <div class="flex justify-center gap-4 mt-4 mb-6" id="paginationControls">
                        <button id="prevPage" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300">Previous</button>
                        <span id="pageIndicator" class="self-center text-gray-600"></span>
                        <button id="nextPage" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300">Next</button>
                    </div>

            </div>
            <% if (userType==='researcher' ) { %>
                <%- include("../partials/researcher-footer") %>
            <% } else if (userType==='explorer' ) { %>
                <%- include("../partials/explorer-footer") %>
            <% } %>
    </div>
    <script src="/js/menu.js"></script>
    <script src="js/paginationSpecies.js"> </script>
    <script src="js/camera.js"></script>

</body>

</html>