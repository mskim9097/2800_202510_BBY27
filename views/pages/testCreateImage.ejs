<div class="profile-btn-area">
    <form action="/test/testCreateImage" method="post" enctype="multipart/form-data">
        <input type="file" name="image" id="input-image" accept="image/*">
        <br>
        <img id="preview-image" src="#" alt="Image Preview" style="display:none; max-width: 200px; margin-top: 10px;">
        <br>
        <button type="submit" id="changes-save">save</button>
    </form>
</div>

<script>
    const inputImage = document.getElementById('input-image');
    const previewImage = document.getElementById('preview-image');

    inputImage.addEventListener('change', function () {
        const file = this.files[0];

        if (file) {
            const reader = new FileReader();

            reader.addEventListener('load', function () {
                previewImage.src = reader.result;
                previewImage.style.display = 'block';
            });

            reader.readAsDataURL(file);
        } else {
            previewImage.style.display = 'none';
            previewImage.src = '#';
        }
    });
</script>