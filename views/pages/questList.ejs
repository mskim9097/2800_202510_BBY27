<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Camera icon -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <title>Quests - BiodiversityGo</title>
    <style>
        #content {
            -ms-overflow-style: none;
            scrollbar-width: none;
            overflow-y: scroll;
        }

        #content::-webkit-scrollbar {
            display: none;
        }

        .line-clamp-2 {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            text-overflow: ellipsis;
        }
    </style>
</head>


<body class="bg-gray-100 p-4 flex flex-col gap-4 h-screen overflow-hidden text-sm">
    <div style="background-color:rgb(242, 242, 242)"
        class="flex flex-col p-4 justify-between h-full rounded-lg shadow-sm gap-4">
        <%- include('../partials/header') %>

        <% if (userType === 'researcher') { %>
            <div class="mb-6">
                <a href="/quests/addQuest" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                    Create New Quest
                </a>
            </div>
        <% } %>

        <% if (error) { %>
            <div class="flex items-center justify-center min-h-[400px]">
                <div class="text-center p-8 rounded-lg bg-white shadow-md">
                    <div class="text-red-500 mb-4">
                        <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                    </div>
                    <p class="text-gray-600"><%= error %></p>
                    <button onclick="window.location.reload()" class="mt-4 text-green-600 hover:text-green-700">
                        Try Again
                    </button>
                </div>
            </div>
        <% } else if (questList && questList.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% questList.forEach(quest => { %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden">
                        <div class="p-4">
                            <h3 class="text-xl font-semibold mb-2"><%= quest.questTitle %></h3>
                            <p class="text-gray-600 mb-4 line-clamp-2"><%= quest.questMission %></p>
                            <div class="flex justify-between items-center">
                                <span class="text-sm text-gray-500">
                                    Difficulty: <%= quest.questDifficulty %>
                                </span>
                                <a href="/quests/<%= quest._id %>" 
                                   class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                                    View Quest
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="text-center py-12">
                <p class="text-gray-600">No quests available at the moment.</p>
            </div>
        <% } %>

        <div class="flex justify-center gap-4 mt-4 mb-6" id="paginationControls">
            <button id="prevPage" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300">Previous</button>
            <span id="pageIndicator" class="self-center text-gray-600"></span>
            <button id="nextPage" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300">Next</button>
        </div>

        <% if (userType === 'researcher') { %>
            <%- include("../partials/researcher-footer") %>
        <% } else if (userType === 'explorer') { %>
            <%- include("../partials/explorer-footer") %>
        <% } %>
    </div>
    <script src="/js/menu.js"></script>
    <script src="/js/questList.js"></script>
    <script src="/js/camera.js"></script>
    <script src="js/paginationQuests.js"></script>
</body>

</html>