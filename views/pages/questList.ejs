<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Camera icon -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <title>Quest List - BiodiversityGo</title>
    <style>
        #content {
            -ms-overflow-style: none;
            scrollbar-width: none;
            overflow-y: scroll;
        }

        #content::-webkit-scrollbar {
            display: none;
        }

        .line-clamp-2 {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            text-overflow: ellipsis;
        }
    </style>
</head>

<body class="h-screen flex flex-col">
    <div style="background-color:rgb(242, 242, 242)"
        class="flex flex-col overflow-hidden p-4 h-full rounded-lg shadow-sm gap-5">

        <!-- Content -->
        <div id="content" class="flex flex-col h-full gap-5 overflow-y-auto">
            <%- include('../partials/header') %>

                <!-- Search + Filters Container -->
                <div class="flex justify-between w-full px-4 items-center">
                    <% if (userType==="researcher" ) { %>
                        <h1 class="flex items-center justify-center text-center p-2 rounded-xl text-2xl"
                            style="background-color: rgb(92, 203, 92,50%);">ðŸ§­ Biodiversity Quests</h1>
                        <div class="flex justify-end">
                            <div class="relative group">
                                <div
                                    class="absolute bottom-full bg-black text-white text-xs rounded px-2 py-1 group-hover:opacity-100 mb-2 right-0 opacity-0">
                                    Add Species
                                </div>
                                <a href="/quests/addQuest" class="p-2 rounded-full cursor-pointer block "
                                    style="background-color: rgb(92, 203, 92, 80%);">
                                    <img src="/images/add.svg" class="h-8 w-8" alt="Add Quest">
                                </a>
                            </div>
                        </div>
                        <% } %>
                </div>

                <%- include('../partials/questFilter') %>

                    <% if (userType==="explorer" ) { %>
                        <h1 class="text-center p-2 rounded-xl" style="background-color: rgb(92, 203, 92,50%);">ðŸ§­
                            Biodiversity Quests</h1>
                        <% } %>

                            <!-- Quest cards -->
                            <%- include('../partials/questListCard') %>

        </div>

        <!-- Footer (always visible) -->
        <% if (userType==='researcher' ) { %>
            <%- include("../partials/researcher-footer") %>
                <% } else if (userType==='explorer' ) { %>
                    <%- include("../partials/explorer-footer") %>
                        <% } %>

    </div>

    <script src="/js/menu.js"></script>
    <script src="/js/questList.js"></script>
    <script src="/js/camera.js"></script>

</body>

</html>