<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <!-- views/pages/riddleQuiz.ejs -->
    <div class="max-w-3xl mx-auto mt-10 bg-white p-6 rounded-xl shadow-md">
        <h2 class="text-2xl font-bold mb-4">ðŸ§© Solve These Riddles!</h2>
        <form action="/ai/riddles/grade" method="POST" class="space-y-6">

            <% riddles.forEach((riddle, index) => { %>
                <div class="border-b pb-4">
                    <p class="font-semibold">
                        <%= index + 1 %>. <%= riddle.question %>
                    </p>
                    <input type="text" name="answers[]" required
                        class="mt-2 w-full border border-gray-300 rounded-md p-2" placeholder="Your answer...">
                </div>
            <% }) %>

            <!-- Hidden field to submit riddles JSON -->
            <input type="hidden" name="riddles" value="<%- JSON.stringify(riddles).replace(/"/g, '&quot;') %>">

            <div class="text-center pt-4">
                <button type="submit"
                    class="bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700 transition">
                    Submit Answers
                </button>
            </div>
        </form>
    </div>

</body>

</html>
